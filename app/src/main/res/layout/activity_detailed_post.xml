<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        tools:text="sebqes" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsername"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerInside"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLike"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/inline_action"
        tools:text="seebas Woah, this picture is cool!" />

    <ImageButton
        android:id="@+id/btnLike"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerCrop"
        android:tint="@color/heart_colors"
        app:srcCompat="@drawable/ic_like_post" />

    <ImageButton
        android:id="@+id/btnComment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ivImage"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btnLike"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerCrop"
        android:tint="@color/inline_action"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageButton
        android:id="@+id/btnForward"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ivImage"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btnComment"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerCrop"
        android:tint="@color/inline_action"
        app:srcCompat="@drawable/ufi_new_direct" />

    <ImageButton
        android:id="@+id/btnSave"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerCrop"
        android:tint="@color/save_colors"
        app:srcCompat="@drawable/ic_save_post" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescription"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="20dp"
        tools:text="January 1st, 2020" />
</RelativeLayout>